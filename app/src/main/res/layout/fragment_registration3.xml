<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:id="@+id/reg3_address_edittext"
        android:hint="Address"
        android:inputType="textPostalAddress"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg3_address_edittext"
        android:id="@+id/reg3_province_edittext"
        android:hint="Province"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg3_province_edittext"
        android:id="@+id/reg3_postalcode_edittext"
        android:hint="Postal Code"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPostalAddress"/>

</RelativeLayout>