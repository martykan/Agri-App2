<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="15dp"
    tools:context="com.example.prateekjoshi.agri_app.Registration1"
    android:id="@+id/fragment_registration1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create Account"
        android:textSize="25dp"
        android:id="@+id/reg1_createaccount_textview"
        android:layout_marginTop="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/reg1_phone_textview"
        android:weightSum="1">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg1_phone_textview"
            android:layout_marginLeft="10dp"
            android:id="@+id/reg1_phone_edittext"
            android:textColor="@color/black"
            android:hint="Phone Number"
            android:inputType="phone"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg1_phone_textview"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/reg1_password_textview"
        android:weightSum="1">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/reg1_password_edittext"
            android:layout_below="@+id/reg1_password_textview"
            android:textColor="@color/black"
            android:hint="Create Password"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reg1_btn_next"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Register"
        android:layout_below="@+id/reg1_password_textview"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@color/Turquoise"
        android:textColor="@color/white"/>


</RelativeLayout>
