<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:id="@+id/reg2_firstname_edittext"
        android:hint="First Name"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg2_firstname_edittext"
        android:id="@+id/reg2_middlename_edittext"
        android:hint="Middle Name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg2_middlename_edittext"
        android:id="@+id/reg2_lastname_edittext"
        android:hint="Last Name"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>